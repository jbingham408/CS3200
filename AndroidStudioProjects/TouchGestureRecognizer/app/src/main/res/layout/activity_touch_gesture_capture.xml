<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TouchGestureCapture"
    android:background="@android:color/holo_green_dark">

    <com.example.jason.touchgesturerecognizer.TouchGestureCaptureView
        android:layout_width="fill_parent"
        android:layout_height="@dimen/gestureViewHeight"
        android:id="@+id/gestureView" />
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layoutVertHeight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/gestureText"
            android:hint="@string/gestureText" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonHeight"
                android:text="@string/addButton"
                android:id="@+id/addBtn"
                android:textSize="@dimen/buttonTextSize"
                android:clickable="true"
                style="@android:style/Widget.Holo.Button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonHeight"
                android:text="@string/eraseButton"
                android:id="@+id/eraseBtn"
                android:textSize="@dimen/buttonTextSize"
                android:clickable="true"
                style="@android:style/Widget.Holo.Button" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/buttonHeight"
                android:text="@string/testButton"
                android:id="@+id/testBtn"
                android:textSize="@dimen/buttonTextSize"
                android:clickable="true"
                style="@android:style/Widget.Holo.Button" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
